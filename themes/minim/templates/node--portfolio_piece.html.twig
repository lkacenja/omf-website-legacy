<article class="{{ attributes.class}} clearfix"{{ attributes }} role="article">
  <header>
    {{ title_prefix }}
    {% if not page %}
      <h2{{ title_attributes }}>
        <a href="{{ node_url }}">{{ label }}</a>
      </h2>
    {% endif %}
    {{ title_suffix }}
    {% if display_submitted %}
      <div class="meta submitted">
        {{ user_picture }}
        {{ submitted }}
      </div>
    {% endif %}
  </header>
  {% if content.video or content.field_portfolio_image %}
    <div class="relative">
      <div class="float-right portfolio-wrapper">
        <div class="portfolio-feature fit-image">
          {% if content.video %}
            <div class="fit-youtube">
              <iframe width="620" height="380" src="{{ content.video }}" frameborder="0" allowfullscreen></iframe>
            </div>
          {% elseif content.field_portfolio_image %}
            <div class="border-s">
              {{ content.field_portfolio_image }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  <div class="text-xl bold">Overview</div>
  <div class="content clearfix"{{ content_attributes }}>
    {{ content.body }}
  </div>
  {% if content.links %}
    <footer class="link-wrapper">
      {{ content.links }}
    </footer>
  {% endif %}
  {{ content.comments }}
</article>
